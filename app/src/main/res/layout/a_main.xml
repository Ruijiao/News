<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/a_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comment_back_color"
    tools:context="com.news.activity.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/a_main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/a_main_scroll"/>

    <HorizontalScrollView
        android:id="@+id/a_main_scroll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentBottom="true"
        android:paddingRight="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_15"
        android:background="#fff">
        <LinearLayout
            android:id="@+id/a_main_tab_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:gravity="center"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>
